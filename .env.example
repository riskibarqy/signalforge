# Local configuration for currency-report
# Copy to .env and export: `set -a; source .env` (bash) or `Get-Content .env | foreach { set-content env:($_.Split('=')[0]) $_.Split('=')[1] }` (PowerShell adjust as needed)

# Targets and allocations
GOLD_TARGET_PCT=0.40
BTC_TARGET_PCT=0.20
STOCK_TARGET_PCT=0.40

GOLD_DCA=600000
BTC_DCA=300000
STOCK_DCA=600000

GOLD_EXTRA_BUY_DROP_PCT=5
GOLD_TAKE_PROFIT_GAIN_PCT=8
BTC_EXTRA_BUY_DROP_PCT=10
BTC_TAKE_PROFIT_GAIN_PCT=20
STOCK_BUY_DROP_PCT=10
STOCK_TAKE_PROFIT_PCT=20
GOLD_EXTRA_BUY_AMOUNT=100000
BTC_EXTRA_BUY_AMOUNT=100000

# Symbols / averages (set avg prices to enable gain-based rules)
XIIT_TICKER=XIIT.JK
GOLD_AVG_PRICE=
BTC_AVG_PRICE=
XIIT_AVG_PRICE=

# Latest portfolio values for rebalance (optional; can override via CLI flags)
GOLD_VALUE_NOW=
BTC_VALUE_NOW=
STOCK_VALUE_NOW=

# SMTP (required to send email)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_pass
SMTP_FROM=you@example.com
SMTP_TO=you@example.com,teammate@example.com

# OpenAI-compatible (optional)
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini
